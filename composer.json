{
    "name": "keboola/processor-create-manifest",
    "description": "Create manifest processor",
    "license": "MIT",
    "type": "project",
    "require": {
        "ext-mbstring": "*",
        "PHP": "^8.2",
        "keboola/csv": "^4.1",
        "keboola/php-component": "^10.1.3",
        "symfony/config": "^6.4",
        "symfony/filesystem": "^6.4",
        "symfony/finder": "^6.4",
        "symfony/process": "^6.4",
        "symfony/serializer": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\Processor\\CreateManifest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\Processor\\CreateManifest\\Tests\\": "tests/phpunit/",
            "Keboola\\Processor\\CreateManifest\\FunctionalTests\\": "tests/functional/"
        }
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "keboola/coding-standard": "^15.0",
        "keboola/datadir-tests": "^5.6",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
